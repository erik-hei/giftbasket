generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Basket {
  address   String?
  birthdate DateTime
  id        Int      @default(autoincrement()) @id
  name      String
  owner     Int
  User      User     @relation(fields: [owner], references: [id])
}

model Gift {
  description String?
  id          Int     @default(autoincrement()) @id
  image       String?
  link        String?
  public      Boolean @default(false)
  title       String  @unique
}

model User {
  email  String   @unique
  id     Int      @default(autoincrement()) @id
  name   String?
  Basket Basket[]
}